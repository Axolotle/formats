<!DOCTYPE html>
<html lang="{{ page.lang }}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ page.globalTitle }} - {{ page.title }}</title>
    <meta name="description" content="{{ page.metaDesc }}"/>
    <meta name="keywords" content="paper format, paper size, format, paper, papier, A0, A1, A2, A3, A4, planetary format, formats planétaire, surface area, aire, planet, planète, ISO 216, norme" />
    <meta name="author" content="Nicolas Chesnais" />
    <link rel="stylesheet" href="{{ page.root }}stylesheet.css" />
</head>
<body class="home">
    {% block main %}
    {% endblock %}
    {% block script %}
    {% endblock %}
    <script type="text/javascript">
        document.querySelector('#menu-formats a').onclick = function () {
            if (this.parentElement.classList.contains('open')) {
                this.parentElement.classList.remove('open');
                this.setAttribute('aria-expanded', false);
            } else {
                this.parentElement.classList.add('open');
                this.setAttribute('aria-expanded', true);
            }
        }
    </script>
</body>
</html>
