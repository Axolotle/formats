{% extends "base.html.jinja2" %}

{% block main %}
{% with title = page.globalTitle %}
{% include 'partials/header.html.jinja2' %}
{% endwith %}
<main>
    {{ page.intro }}
    <div id="planets">
    {% for planet in page.planets %}
        <div id="{{ planet.name['en']|lower }}">
            <p>{{ planet.name[page.lang] }}</p>
            <a href="planets/{{ planet.name['en']|lower }}.html">{{ planet.symbol }}</a>
        </div>
    {% endfor %}
    </div>
    {{ page.content }}
</main>
{% endblock %}
