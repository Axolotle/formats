{% extends 'baseA4.svg.jinja2' if l is not none else 'base.svg.jinja2' %}

{% block main %}
<g transform="scale(-1,1) translate({{ reverseTranslate }})">
    <g transform="translate({{ translate }})">
        <g class="lines">
        {%- for line in lines %}
            <path d="{{ line.d }}" />
        {%- endfor %}
        </g>
        <g class="center">
        {%- for name in names %}
            <text x="{{ name.pos[0] }}" y="{{ name.pos[1] }}" style="font-size:{{ name.fontSize }}">{{ name.content }}</text>
        {%- endfor %}
        </g>
    </g>
    <flowRoot>
        <flowRegion>
            <rect x="{{ textBlock.pos[0] }}" y="{{ textBlock.pos[1] }}" width="{{ textBlock.size[0] }}" height="{{ textBlock.size[1] }}"/>
        </flowRegion>
    {%- for p in textBlock.paragraphs %}
        {% if p == '' -%}
        <flowPara/>
        {%- else -%}
        <flowPara>{{ p }}</flowPara>
        {%- endif %}
    {%- endfor %}
    </flowRoot>

</g>
{% endblock %}
